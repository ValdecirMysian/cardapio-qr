RewriteEngine On

# Preserva arquivos críticos do chat
RewriteCond %{REQUEST_URI} !^/admin-chat\.php$
RewriteCond %{REQUEST_URI} !^/admin_suport\.php$
RewriteCond %{REQUEST_URI} !^/chat-api\.php$
RewriteCond %{REQUEST_URI} !^/config\.php$

# Remove .php da URL para outros arquivos
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# Remove .html da URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Redireciona URLs com .php para versão sem .php, exceto arquivos críticos
RewriteCond %{THE_REQUEST} \s/(.*?\.php)\s [NC]
RewriteCond %{REQUEST_URI} !^/admin-chat\.php
RewriteCond %{REQUEST_URI} !^/admin_suport\.php
RewriteCond %{REQUEST_URI} !^/chat-api\.php
RewriteCond %{REQUEST_URI} !^/webhook-chatwoot\.php
RewriteCond %{REQUEST_URI} !^/config\.php
RewriteCond %{REQUEST_URI} !^/buscar_imagens\.php
RewriteCond %{REQUEST_URI} !^/ads/pixel\.php
RewriteCond %{REQUEST_URI} !^/salvar_lead\.php
RewriteCond %{REQUEST_URI} !^/get-contact\.php
RewriteRule ^(.*)\.php$ /$1 [R=301,L]

# Redireciona URLs com .html para versão sem .html
RewriteCond %{THE_REQUEST} \s/(.*?\.html)\s [NC]
RewriteRule ^(.*)\.html$ /$1 [R=301,L]

# Redireciona index.php ou index.html para raiz
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.(php|html) [NC]
RewriteRule ^index\.(php|html)$ / [R=301,L]

# Página de erro personalizada
ErrorDocument 404 /404.php

